<div class="post-topbar">

    <div class="post-st">
        <ul>
            @*<li><a class="post-jb active" href="#" title="">What's in your mind?</a></li>*@
            <li> <a id="popBtn" data-toggle="modal" data-target="#myModal">What's in your mind?</a></li>

        </ul>
    </div><!--post-st end-->
</div>




<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-edit">
      
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="la la-times-circle-o"></i></button>

        <!-- Modal content-->
        <div class="modal-content">

            <form asp-controller="Home" asp-action="CreatePost" method="post">
                <div class="modal-header model-header-edit">
                    <h3 id="createTitle">Create Post</h3>
                </div>

                <div class="modal-body">

                    <div class="post-body">
                        @*<div class="post-project-fields">*@
                        <div class="row">
                            <div class="col-lg-12">
                                <textarea id="textPost" name="PostContent" placeholder="What's in your mind..."></textarea>

                            </div>

                        </div>
                    </div><!--post-project-fields end-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/jquery.min.js"></script>

    <script>
        $("#postcreate").click(function () {
            alert($("#content").val);

            var o = {

                PostContent: $("#content").val()
            }
            alert(PostContent);

            $.ajax({
                /*url: 'Home/CreatePost'*/
                url: '@Url.Action("CreatPost", "Home")',
                method: 'POST',
                data: JSON.stringify(o),
                contentType: 'application/json',

                success: function (data) {
                    alert(JSON.stringify(data));
                },
                error: function (e) {
                    alert("error")
                }

            })
        })

    </script>
}

