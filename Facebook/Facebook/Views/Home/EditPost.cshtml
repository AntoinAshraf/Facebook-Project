@model Facebook.Models.ViewModels.PostsDTO

@{
    ViewData["Title"] = "Facebook - Edit Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="height:500px">
    <div class="col-md-12">
        <form asp-action="EditPost" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <textarea asp-for="PostContent" class="form-control" style="height:150px;overflow:scroll" onkeydown="checkform()" id="textPost"></textarea>
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input id="submit" type="submit" value="Save" class="btn btn-primary" disabled />
                <a class="btn btn-default" href="/home/index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section scripts {

    <script src="~/js/CreatePostVald.js"></script>

}
